		// TODO Auto-generated method stub
		// block until event happens
	    this.waiting = true;
	    
	    while(waiting) {
	        //something, maybe nothing?
	    }
	    return;
	}

	@Override
	public void waitForEvent(Type type, int time) {
		// TODO Auto-generated method stub
		
	}
	
	protected void setWaiting(boolean value) {
	    waiting = value;
	}

}

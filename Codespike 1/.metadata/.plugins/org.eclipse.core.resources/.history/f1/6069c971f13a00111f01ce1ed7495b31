package DemoTest;

import Liza.LizaServer;

public class Demo {

	public static void main(String[] args) {
		//start up the server
		LizaServer ls = new LizaServer();
		
		System.out.println("hello there!");
		
		Player playerList[];
		// Here, we would make the mock player and connect it to the server
		// But for now, we wait until I log in
		while (ls.getOnlinePlayers().length == 0) {}
		
		ls.broadcastMessage("Hi there!");
		
		
		
		// Normally we would wait until the mock player is removed
		// But for now, we wait until I log off
		while (ls.getOnlinePlayers().length != 0) {}
		
		
		//shut down server
		ls.stop();
	}
}
